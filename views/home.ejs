<% // Define script variable for layout var script = `
<script>
	// Form submission
	document.addEventListener("DOMContentLoaded", function () {
		const searchForm = document.querySelector(".booking-search-form");

		searchForm.addEventListener("submit", function (e) {
			e.preventDefault();

			const date = document.getElementById("bookingDate").value;
			const packageType = document.getElementById("packageType").value;
			const duration = document.getElementById("duration").value;

			let queryParams = [];
			if (date) queryParams.push(`date=${date}`);
			if (packageType) queryParams.push(`package=${packageType}`);
			if (duration) queryParams.push(`duration=${duration}`);

			const queryString =
				queryParams.length > 0 ? `?${queryParams.join("&")}` : "";
			window.location.href = `/booking${queryString}`;
		});
	});
</script>
`; %>

